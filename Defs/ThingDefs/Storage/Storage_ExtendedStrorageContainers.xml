<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="FurnitureBase">
		<defName>Storage_MassiveWeaponsRack</defName>
		<label>Massive Weapons Rack</label>
		<thingClass>ExtendedStorage.Building_ExtendedStorage</thingClass>
		<terrainAffordanceNeeded Inherit="false">Medium</terrainAffordanceNeeded>
		<graphicData>
			<texPath>Things/Building/Furniture/MassiveWeaponsRack/MassiveWeaponsRack</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(4,3)</drawSize>
		</graphicData>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Beauty>-3</Beauty>
			<ES_StorageFactor>3</ES_StorageFactor>
		</statBases>
		<description>Haulers carry massive weapons here for storage.  Only the biggest booms go here!</description>
<!--
		<ExtendedStorageExtended>
			<holdsSummary>heavy weapons</holdsSummary>
		</ExtendedStorageExtended>
 -->
		<size>(2,1)</size>
		<stuffCategories>
			<li>Metallic</li>
		</stuffCategories>
		<costStuffCount>55</costStuffCount>
		<killedLeavings>
			<ChunkSlagSteel>1</ChunkSlagSteel>
		</killedLeavings>
		<building>
			<ignoreStoredThingsBeauty>true</ignoreStoredThingsBeauty>
			<fixedStorageSettings>
				<priority>Important</priority>
				<filter>
					<thingDefs>
						<li>Gun_TripleRocket</li>
						<li>Gun_DoomsdayRocket</li>
						<li>Gun_Minigun</li>
						<li>Gun_IncendiaryLauncher</li>
						<li>Gun_LMG</li>
					</thingDefs>
				</filter>
			</fixedStorageSettings>
		</building>
		<inspectorTabs>
			<li>ExtendedStorage.ITab_Storage</li>
		</inspectorTabs>
		<tickerType>Normal</tickerType>
		<staticSunShadowHeight>0.5</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
	</ThingDef>
